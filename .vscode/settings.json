{
    "json.schemas": [
        {
            "fileMatch": [
                "skeleton.json",
                "globals.json"
            ],
            "url": "./schema/schema.json"
        },
        {
            "fileMatch": [
                "globals.json"
            ],
            "url": "./schema/globals-schema.json"
        }
    ],
    "editor.formatOnSave": true,
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": ".*",
                "cmd": "node sortStyles.js",
                "runOn": "save",
                "autoSave": false,
            }
        ]
    },
    "cSpell.words": [
        "Chenoweth",
        "cwrap",
        "cwrapBeautiful",
        "cwrapomit",
        "eebox",
        "Embla",
        "evenodd",
        "Haysbert",
        "herocwrap",
        "hypers",
        "minmax",
        "netcry",
        "Paradis",
        "rgba",
        "skillset",
        "Statham",
        "stylesheet",
        "sxiv"
    ]
}